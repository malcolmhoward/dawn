# DAWN Secrets Configuration
# ===========================
# Copy this file to one of:
#   ~/.config/dawn/secrets.toml   (user - recommended)
#   /etc/dawn/secrets.toml        (system-wide)
#
# IMPORTANT: Keep this file secure! Set permissions to 600:
#   chmod 600 ~/.config/dawn/secrets.toml
#
# Alternative: Use environment variables instead of this file:
#   OPENAI_API_KEY=sk-...
#   ANTHROPIC_API_KEY=sk-ant-...
#   MQTT_USERNAME=user
#   MQTT_PASSWORD=pass

[api_keys]
# OpenAI API key (for GPT models)
# openai = "sk-..."

# Anthropic API key (for Claude models)
# claude = "sk-ant-..."

[mqtt]
# MQTT broker credentials (optional)
# username = ""
# password = ""
