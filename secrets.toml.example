# DAWN Secrets Configuration
# ===========================
# Copy this file to one of:
#   ./secrets.toml                  (project root - highest priority)
#   ~/.config/dawn/secrets.toml     (user - recommended for shared systems)
#   /etc/dawn/secrets.toml          (system-wide)
#
# IMPORTANT: Keep this file secure! Set permissions to 600:
#   chmod 600 secrets.toml
#
# Alternative: Use environment variables instead of this file:
#   OPENAI_API_KEY=sk-...
#   CLAUDE_API_KEY=sk-ant-...
#   GEMINI_API_KEY=...

[secrets]
# Cloud LLM API keys - add at least one
# openai_api_key = "sk-your-openai-key-here"
# claude_api_key = "sk-ant-your-claude-key-here"
# gemini_api_key = "your-gemini-api-key-here"

# Pre-shared key for satellite registration (generate with: ./generate_ssl_cert.sh --gen-key)
# satellite_registration_key = ""

[secrets.smartthings]
# SmartThings OAuth credentials (optional, for home automation)
# client_id = ""
# client_secret = ""

[mqtt]
# MQTT broker credentials (optional)
# username = ""
# password = ""
