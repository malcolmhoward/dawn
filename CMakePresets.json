{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default (Full)",
      "description": "Full build with all features enabled (alias for 'full')",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_WEBUI": "ON"
      }
    },
    {
      "name": "local",
      "displayName": "Local Only",
      "description": "Local microphone only, no network features (embedded / standalone)",
      "binaryDir": "${sourceDir}/build-local",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_WEBUI": "OFF"
      }
    },
    {
      "name": "full",
      "displayName": "Full",
      "description": "All features enabled: local + WebUI + DAP2 satellites",
      "binaryDir": "${sourceDir}/build-full",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_WEBUI": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Full)",
      "description": "Full build with debug symbols",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_WEBUI": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "local",
      "configurePreset": "local"
    },
    {
      "name": "full",
      "configurePreset": "full"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    }
  ]
}
